/* 头部 */
/* 头部广告 */
.header .top-ad {
    display: block;
    height: 100px;
    width: 100%;
    background: #cd1219; 
}
.header .top-ad-img a{
    display: block;
margin: 0 auto;
height: 100px;
width: 1200px;
background: url(../images/section1/top-ad1.jpg)no-repeat 0 0;
}
/* 头部广告结束 */
/* 登陆 注册 服务 */
.header .top-2{
    width: 100%;
    height: 36px;
    border-bottom: 1px solid #dfdcdc;
    font-size: 12px;
    color: rgb(48, 47, 47);   
}
.header .top-2 .huanying,p{
    line-height: 36px;
    float: left;
}
.header .top-2 p{
    color: rgb(206, 205, 204);
    margin-left:3px; 
}

.header .top-2 .login,.regist{
    color: orangered;
    list-style: none;
}
.header .menu{
    float: right;
    font-size: 12px;
    line-height: 37px; 
    width: 128px;
    height: 37px;
    text-align: center;
}
.header .menu a{
    color: black;    
}
.header .menu img{
  vertical-align: middle;
  margin:  0 5px ;
}
.header .menu1{
    position: relative;
}
.header .menu4{
    position: relative;

}
.header .menu4-1{
    width: 256px;
    height: 400px;
    border: 1px solid red;
    display: none;
    position: absolute;
    top: 37px;
    left: -128px;
    background: #fff;
}
.header .menu4-1-1{
    border-bottom: 1px solid #dfdcdc;
    margin: 0 auto;
    width: 230px;
    height: 160px;
    background: url(../images/section1/ingge-1.0.1.png)no-repeat 10px 15px;
}
.header .menu4-1-1-1{
    width: 80px;
    height: 30px;
    background: orangered;
    border-radius: 35px;
    border: 1px solid orangered;
    color:#fff;
    font-size:14px;
    font-family: '微软雅黑';
    margin-top:80px;
    margin-left:130px;
}
.header .menu4-1 .menu4-1-1-2{
    color:#000;
    font-family: '微软雅黑';
    font-size:14px;
    margin-left:70px;
}
.header .menu4-1-2{
    border-bottom: 1px solid #dfdcdc;
    margin: 0 auto;
    width: 230px;
    height: 100px;
}
.header .menu4-1-2-img{
    margin-right:140px!important;

}
.header .menu1-2:hover a{
    color:orangered!important;
}
.header .menu:hover .menu-1 {
    color: orangered; 
}
.header .menu4:hover .menu4-1{
    display: block;
}
.menu1:hover .menu1-1{
    display:block;
    color: orangered;
}
.header .menu1-1{
    position: absolute;
    top: 37px;
    left: 0;
    display: none;
}
.header .menu1-2{
    width: 128px;
    height: 37px;
    font-size: 12px;
    /* box-lines: 37px; */
    border-left: 1px solid rgb(206, 205, 204);
    border-right: 1px solid rgb(206, 205, 204);
    border-bottom: 1px solid rgb(206, 205, 204);
    background: #fff; 
    text-align: left;  
    padding-left:20px; 
    
}
.header .menu1-2 .menu1-2-1{
  margin-left: 5px;
}
.header .menu .bnner{
    border-top-right-radius: 50%;
    border-top-left-radius: 50%;
    border-bottom-right-radius: 50%;
    background: orangered;
    margin: 2px 0 0 -10px;
    height: 14px;
    float:right; 
}
.header .menu .bnner p{
    line-height: 12px;
    color: #fff;
    font-size: 12px;
    margin:0 2px 0 2px; 
}
/* 登陆 注册 服务结束 */
