                                        var ddTop = $("<dd>");
                                        var ddDown = $("<dd>");
                                        var strOne = "";
                                        var strTwo = "";
                                        for (var j = 0; j < data.imgs.length; j++) {
                                            strOne += '<a href="#">' + strText[j] + '</a>';
                                            strTwo += '<a href="#"><img src="images/index/' + data.imgs[j] + '" alt="提示文字"/></a>';
