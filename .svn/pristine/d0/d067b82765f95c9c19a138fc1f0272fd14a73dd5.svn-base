.top-ad{
    width:1920px;
    background-color: #CE121A;
}
.top-ad .top-ad-mid{
    background: url(../images/index/top-ad.jpg) no-repeat 0 0;
    height: 100px;
    margin:0 auto;
    width:1200px;
}
.nav{
    width:1920px;
    border-bottom:1px solid #EDEEF0;
}
.nav .nav-mid{
    height: 35px;
    width:1200px;
    line-height: 35px;
    margin:0 auto;
    font-size: 12px;
    color:#666666;
}
.nav-mid .nav-mid-left{
    float:left;
}
.nav-mid-left span{
    border-right:1px solid #EDEEF0;
    padding:0 5px;
}
.nav-mid-left a:link{
    color:#FF6600;
}
.nav-mid-left a:visited{
    color:#FF6600;
}
.nav-mid-left a:active{
    color:#FF6600;
}
.nav-mid-right{
    float:right;
    position: relative;
}
.nav-mid-right .right-one,.right-two,.right-three,.right-four{
    padding:0 15px;
    border:1px solid transparent;
    float:left;
    cursor: pointer;
}
.nav-mid-right .my-yinping{
    background:url(../images/index/mycount.png) no-repeat 0 0;
    padding-left:20px;
    line-height: 35px;
}
.my-yinping img{
    vertical-align: middle;
    margin-left:10px;

}
.nav-mid-right .my-cart{
    background:url(../images/index/my-cart.png) no-repeat 0 0;
    padding-left:20px;
    line-height: 35px;
}
.nav-mid-right .my-qiye{
    background:url(../images/index/heart.png) no-repeat 0 0;
    padding-left:20px;
    line-height: 35px;
}
.nav-mid-right .my-kefu{
    background:url(../images/index/kefu.gif) no-repeat 0 0;
    padding-left:20px;
    line-height: 35px;
}
.my-kefu img{
    vertical-align: middle;
    margin-left:10px;
}
/*nav的hover效果*/
.nav-mid-right .right-one:hover .my-yinping{
    background:url(../images/index/mycount11.png) no-repeat 0 0;
    color:#FF6600;
}
.nav-mid-right .right-two:hover .my-cart{
    background:url(../images/index/my-cart1.png) no-repeat 0 0;
    color:#FF6600;
}
.nav-mid-right .right-three:hover .my-qiye{
    background:url(../images/index/heart11.png) no-repeat 0 0;
    color:#FF6600;
}
.nav-mid-right .right-one:hover{
    border-left:1px solid #EDEEF0;
    border-right:1px solid #EDEEF0;
}
.nav-mid-right .right-two:hover{
    border:1px solid #EDEEF0;
}
.nav-mid-right .right-three:hover{
    border:1px solid #EDEEF0;
}
.nav-mid-right .right-four:hover{
    border-left:1px solid #EDEEF0;
    border-right:1px solid #EDEEF0;
}
.right-one-hid{
    position: absolute;
    top:35px;
    left:0;
    width:120px;
    display: none;
}
.right-one-hid span{
    display: inline-block;
    width:110px;
    padding-left:10px;
    border:1px solid #EDEEF0;
    
}
.right-four-hid{
    position: absolute;
    left:210px;
    width:250px;
    border:1px solid red;
}
.right-four-hid .hid-list-one{
    width:210px;
    background: url(../images/index/kefu-hid.png) no-repeat 20px 15px;
    border-bottom:1px solid #EDEEF0;
    margin:0 auto;
}
.hid-list-one .title{
    text-align: center;
    display: inline-block;
    width:80px;
    height: 30px;
    background-color:#FF6600;
    border-radius: 15px; 
    color:white;
    line-height: 30px;
    margin-top:65px;
    margin-left:110px;
}
.hid-list-one p{
    margin-left:75px;
}
.right-four-hid .hid-list-two{
    width:210px;
    background: url(../images/index/kefu-hid.png) no-repeat 20px 15px;
    border-bottom:1px solid #EDEEF0;
    margin:0 auto;
    padding:20px 0;
}
.hid-list-two span{
    color:#FF6600;
    font-size: 23px;
    font-weight: bold;
    margin-left:50px;
}
.hid-list-two p{
    margin-top:-15px;
    margin-left:50px;
}