/* 主体开始 */
.main{
    width: 1907px;
}
/* banner轮播图开始 */
.main .banner-loop{
    position: relative;
    width: 1907px;
    height: 450px;
    /* border: 1px solid red; */
    margin: 0 auto;
    /* overflow: hidden; */
}
.main .banner-loop .loop a{
    width: 100%;
    height: 100%;
    float: left;
}
.main .banner-loop .loop li{
    width: 1907px;
    height: 450px;
    position: absolute;
    left: 0;
    top: 0; 
    display: none;
}
.main .banner-loop .banner-next li {
    width: 50px;
    height: 8px;
    float: left;
    margin-right: 15px;
    cursor: pointer;
    background-color: #fff;
}
.main .banner-loop .banner-next{
    position: absolute;
    bottom: 20px;
    left: 50%;
    margin-left: -95px;
}
/* content开始 */
.main .content-first{
    width: 1907px;
    background-color: #FF3062;
}
.main .content-first .content-head{
    width: 1200px;
    margin: 0 auto;
    overflow: hidden;
}
.main .content-first .content-head div{
    width: 482px;
    height: 118px;
    margin:  55px 359px;
    background: url(../images/Section5/XRLJJ$7O0ZO7%GS8B%V4FGE.png) no-repeat 0 0 ;
}
.main .content-first .section1{
    width: 1200px;
    margin: 0 auto 30px;
    position: relative;
}
.main .content-first .section1 p{
    width: 1200px;
    height: 825px;
    margin: 0 auto;
}
.main .content-first .section1  .asidetop{
    position: absolute;
    right: 40px;
    top: 10px;
    width: 140px;
    height: 120px;
}
.main .content-first .section1  .asidetop .tehui{
    width: 140px;
    height: 45px;
    background-color: #CC00CC;
    color: #fff;
    text-align: center;
    line-height: 45px;
    font-size: 30px;
}
.main .content-first .section1  .asidetop .zhengtao{
    width: 140px;
    height: 25px;
    text-align: center;
    background-color: #FFFF00;
    color: red;
    line-height: 25px;
    font-size: 2px;

}
.main .content-first .section1  .asidetop .lijian{
    color: red;
    height: 50px;
    width: 140px;
    background-color: #FFFF00;
    text-align: center;
    line-height: 50px;
    font-size: 30px;
}
.main .content-first .section1 .asidebottom{
    position: absolute;
    bottom: 30px;
    right: 40px;
}
.main .content-first .section1 .asidebottom .price{
    color: #fff;
    font-size: 55px;
}
.main .content-first .section1 .asidebottom .a-suit-btn{
    width: 220px;
    height: 60px;
    border-radius: 50px;
    text-align: center;
    line-height: 60px;
    background-color: #FFFF00;
    font-size: 25px;
}
.main .content-first .tagbox{
    width: 1200px;
    margin: 0 auto;
}
.main .content-first .tagbox ul li{
    width: 380px;
    height: 195px;
   float: left;
   
}
.ml{
    margin-right:30px;   
}
.main .content-first .tagbox .title{
    width: 350px;
    height: 42px;
    border-radius: 10px 10px 0  0 ;
    padding-left: 30px;
    font-size: 25px;
    line-height: 42px;
    color: #fff;
}
/* 复用开始 */
.bc1{
    background-color: #9DD600;
}
.bc2{
    background-color: #DF7EFF;
}
.bc3{
    background-color: #7EC0FF;
}
.border1{
    border:1px solid #9DD600;
    border-radius: 20px;
}
.border2{
    border:1px solid #DF7EFF;
    border-radius: 20px;
}
.border3{
    border:1px solid #7EC0FF;
    border-radius: 20px;
}
.border1:hover{
    background-color: #9DD600;
}
.border2:hover{
    background-color: #DF7EFF;
}
.border3:hover{
    background-color: #7EC0FF;
}
/* 复用结束 */
.main .content-first .tagbox .taglist{
    width: 320px;
    height: 85px;
    padding: 30px; 
    background-color: #fff;
    border-radius: 0  0  10px 10px; 
}
.main .content-first .tagbox .taglist{
    width: 340px;
    height:85px;
    padding: 30px 20px;  
}
.main .content-first .tagbox .taglist a{
     float: left;
     width: 78px;
     height: 30px;
     text-align: center;
     line-height: 30px;
     color: #666666;
     margin-right: 5px;
     margin-bottom: 10px;
}
.main .content-first .tagbox .taglist a:hover{
     color: #fff;
}
